@model IEnumerable<HostEditor.Models.Category>
@{
    ViewBag.Title = "Kategoriler";
}
@section Navigation
{
    <li>
        <a href="@Url.Action("Index","Category")">@ViewBag.Title</a>
    </li>
}
<div class="page-header">
    <h1>
        <i class="fa fa-sitemap "></i> @ViewBag.Title
    </h1>
</div>
<div class="widget-box transparent">
    <div class="widget-header">
        <h5 class="widget-title">
            <a class="btn btn-success btn-white" href="@Url.Action("Create","Category")">
                <i class="fa fa-plus"></i>
                <span class="hidden-phone">Yeni Kategori</span>
            </a>
        </h5>
        <div class="widget-toolbar" style="width:400px;">
            <div class="input-group">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.TextBox("Search", (string)ViewBag.Search, htmlAttributes: new { @class = "form-control search-query", @placeholder = "Kategori" })
                    @*<input class="form-control search-query" id="Search" name="Search" value="@ViewBag.Search" placeholder="Kategori" type="text">*@
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-purple btn-sm">
                            <span class="ace-icon fa fa-search icon-on-right bigger-110"></span>
                            Ara
                        </button>

                    </span>
                }
            </div>
        </div>
    </div>

    <div class="widget-body dataTables_wrapper">
        <div class="widget-main">
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(item.Name, "Edit", new { id = item.CategoryId })
                        </td>
                        <td>
                            <a href="@Url.Action("Delete", "Category", new { id = item.CategoryId })">
                                <i class="menu-icon fa-2x fa fa-trash"></i>
                                @*<span class="menu-text"> Sil </span>*@
                            </a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
